.content{
	width: 100%;
	height: 1340rpx;
}
.title_wapper{
	width: 100%;
	height: 200rpx;
	/* background-color: #4CD964; */
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	align-items: center;
	font-size: 60rpx;
}
.middle_wapper image{
	width: 260rpx;
	height: 260rpx;
	margin-top: 10rpx;
	margin-bottom: 30rpx;
}
.middle_wapper{
	/* background-color: #4CD964; */
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 80rpx;
}
.single_box{
	height: 100rpx;
	width: 600rpx;
	border: 3px solid #DD524D;
	margin-top: 30rpx;
	border-radius: 20rpx;
	box-shadow: 1px 2px 5px rgba(248, 248, 248, 102);
}
.btn{
	display: flex;
	align-items: center;
	justify-content: center;
	width: 400rpx;
	height: 80rpx;
	margin: 10rpx auto;
	font-size: $font-lg;
	color: #FFFFFF;
	background-color: #dd524d;
	border-radius: 50rpx;
	box-shadow: 1px 2px 5px rgba(248, 248, 248, 102);
}
.btn2{
	display: flex;
	align-items: center;
	justify-content: center;
	width: 240rpx;
	height: 76rpx;
	margin: 4rpx;
	margin-top: 26rpx;
	font-size: 34rpx;
	color: #FFFFFF;
	background-color: #DD524D;
	box-shadow: 1px 2px 5px rgba(248, 248, 248, 102);
}
.pop_wapper{
	width:600rpx;
	height: 644rpx;
	background-color: #fff;
	position: absolute; left: 0; top: 0; right: 0; bottom: 0;
	margin: auto;   /* 有了这个就自动居中了 */
	box-shadow: 2px 2px 4px #F0F0F0;
}
.pop_top{
	width: 100%;
	height: 50rpx;
	font-size: 50rpx;
	font-weight: 500;
	padding-top: 44rpx;
	margin-bottom: 80rpx;
	color: #3A3A3A;
	display:flex;
	justify-content: center;
}
input{
	width:400rpx;
	height: 80rpx;
	padding-left:90rpx; /* 输入框内容的左内距 */
	border: #3A3A3A 3rpx solid;
	border-radius:10px;
	font-size: 34rpx;
	color:  #606266;
	margin-top: 30rpx;
	margin-left: 8%;
}

